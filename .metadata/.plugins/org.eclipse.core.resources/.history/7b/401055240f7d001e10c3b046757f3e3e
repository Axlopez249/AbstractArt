package ui;

import java.awt.Color;
import java.awt.Font;
import java.awt.Graphics;
import java.awt.event.ActionEvent;
import java.awt.event.WindowAdapter;
import java.awt.event.WindowEvent;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JTextField;

import figuras.Punto;
import figuras.Triangulo;

public class Lienzo extends JFrame{
	private Triangulo triangulo = new Triangulo();
	private Punto circulo;
	
	public Lienzo(int tamanox, int tamanoy) {
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setSize(400, 400);
        setLocationRelativeTo(null); // Centra la ventana en la pantalla

        
        

        setVisible(true);

	}
	
	public void AgregarTriangulo() {
        triangulo.setBounds(100, 100, 200, 200);
        triangulo.setVisible(true);
        triangulo.repaint();
        add(triangulo);
    }
	
	public void AgregarCirculo() {
        circulo = new Punto();
        circulo.setRadio(50); // Establece el radio del círculo
        circulo.setBackground(Color.WHITE); // Establece el color de fondo del círculo si es necesario
        // Ajusta el tamaño y la posición del círculo si es necesario
        circulo.setBounds(100, 100, 200, 200);
        add(circulo);
        repaint(); // Vuelve a dibujar el círculo en el lienzo
    }


}
